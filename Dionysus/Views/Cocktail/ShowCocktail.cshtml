@model Dionysus.ViewModels.CocktailViewModel

@{
    ViewBag.Title = "ShowCocktail";
}

<h2>ShowCocktail</h2>

<table border="1">
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Glass</th>
        <th>Skill</th>
        <th>Ingredients</th>
    </tr>
    @foreach (var item in Model.cocktailList)
    {
        <tr>
            <td>@item.Name</td>
            <td>
                @foreach (var cat in item.Category)
                {
                    @cat.ToString()
                    <br/>
                }
            </td>
            <td>@item.Glass</td>
            <td>@item.Skill</td>
            <td>
                @foreach (var ing in item.Ingredients)
                {
                    @ing.Name
                    @Html.Raw("&nbsp;")
                    @ing.Weight
                    @Html.Raw("&nbsp;")
                    @ing.Unit
                    <br />
                }
            </td>
        </tr>
    }
</table>